{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AVVA",
  "version": "0.1.0",
  "identifier": "com.kraftsman.avva",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run generate"
  },
  "app": {
    "windows": [
      {
        "title": "AVVA — Linux Assistant",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Kraftsman AI",
    "copyright": "© 2026 Kraftsman AI",
    "category": "Utility",
    "shortDescription": "Linux AI Assistant",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "sidecars/avva-core"
    ]
  }
}